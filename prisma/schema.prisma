generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_pk     String @id @default(uuid())
  userName  String
  password  String
  accountId String

  @@map("users")
}

model Account {
  id_pk   String @id @default(uuid())
  balance Int    @default(1000)
}

model Transactions {
  id_pk             String   @id @default(uuid())
  createdAt         DateTime @default(now())
  debitedAccountId  String
  creditedAccountId String
}
